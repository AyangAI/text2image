/**index.wxss**/

page {
  background: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx 30rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.page-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 20%, rgba(255,255,255,0.1) 0%, transparent 40%),
    radial-gradient(circle at 80% 80%, rgba(255,255,255,0.08) 0%, transparent 50%),
    radial-gradient(circle at 15% 70%, rgba(255,255,255,0.06) 0%, transparent 30%),
    radial-gradient(circle at 85% 30%, rgba(255,255,255,0.05) 0%, transparent 35%);
  pointer-events: none;
  z-index: 0;
}



/* 顶部区域 */
.header-section {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 60rpx 20rpx 40rpx;
}

.welcome-icon {
  font-size: 70rpx;
  margin-bottom: 30rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.title {
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 25rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 表单区域 */
.form-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx 40rpx;
  z-index: 1;
  margin-bottom: 50rpx;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 0 30rpx;
  height: 88rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.form-row:focus-within {
  border-color: #4a6cf7;
  background: rgba(74, 108, 247, 0.1);
  box-shadow: 0 12rpx 48rpx rgba(74, 108, 247, 0.2);
}

form {
  background: transparent !important;
  width: 100%;
}

.register-form {
  background: transparent;
  padding: 40rpx 0;
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.form-group {
  margin-bottom: 35rpx;
  padding: 0 5rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.input-wrapper:focus-within {
  border-color: #4a6cf7;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 32rpx rgba(74, 108, 247, 0.2);
}

.input-wrapper.success {
  /* 移除绿色边框和背景，保持透明底色 */
}

.input-wrapper.error {
  /* 移除红色边框和背景，保持透明底色 */
}

.input-icon {
  font-size: 36rpx;
  padding: 0 30rpx;
  color: #4a6cf7;
}

.input-field {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #4a6cf7;
  background: rgba(74, 108, 247, 0.1);
  box-shadow: 0 12rpx 48rpx rgba(74, 108, 247, 0.2);
}

.form-input {
  flex: 1;
  height: 75rpx;
  background: transparent;
  border: none;
  padding: 0 25rpx;
  font-size: 30rpx;
  color: #333333;
  outline: none;
}

.form-input::placeholder {
  color: #999999;
}

/* 验证图标 */
.validation-icon {
  font-size: 32rpx;
  font-weight: bold;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.validation-icon.success {
  color: #52c41a;
}

.validation-icon.error {
  color: #ff4d4f;
}

/* 错误提示信息 */
.error-message {
  font-size: 22rpx;
  color: #ff4d4f;
  margin-top: 10rpx;
  padding-left: 15rpx;
  animation: shake 0.3s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

/* 邀请码提示 */
.invite-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 10rpx;
  padding-left: 15rpx;
  text-shadow: none;
}

/* 性别选择 */
.gender-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: none;
}

.gender-group {
  display: flex;
  gap: 20rpx;
}

.gender-item {
  flex: 1;
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.gender-item.active {
  border-color: #4a6cf7;
  background: linear-gradient(135deg, #6e8efb, #4a6cf7);
  box-shadow: 0 8rpx 32rpx rgba(74, 108, 247, 0.3);
}

.gender-item.active .gender-content {
  color: #ffffff;
}

.gender-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  color: #666666;
  transition: color 0.3s ease;
}

.gender-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.gender-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 隐藏原生radio */
.gender-item radio {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 90rpx;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.7);
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 25rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.register-btn.active {
  background: rgba(255, 255, 255, 0.9);
  color: #4a6cf7;
  border-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(255, 255, 255, 0.3);
}

.register-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(255, 255, 255, 0.2);
}

.btn-text {
  margin-right: 15rpx;
}

.btn-icon {
  font-size: 32rpx;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.2) rotate(180deg); }
}

/* 底部区域 */
.footer-section {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 20rpx 40rpx 30rpx;
  background: transparent;
  margin-top: auto;
}

.footer-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 300;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
