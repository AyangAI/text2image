/**index.wxss**/

page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  overflow: hidden;
}

.page-container {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
  font-family: PingFang SC, -apple-system, BlinkMacSystemFont, sans-serif;
}



/* 顶部区域 */
.header-section {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 120rpx 60rpx 80rpx;
}

.welcome-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  animation: wave 2s ease-in-out infinite;
}

@keyframes wave {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

.title {
  font-size: 56rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 表单区域 */
.form-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 60rpx;
  z-index: 1;
}

form {
  background: transparent !important;
  width: 100%;
}

.register-form {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 40rpx;
  padding: 60rpx 50rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.form-group {
  margin-bottom: 50rpx;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.input-wrapper:focus-within {
  border-color: #667eea;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.2);
}

.input-icon {
  font-size: 36rpx;
  padding: 0 30rpx;
  color: #667eea;
}

.form-input {
  flex: 1;
  height: 100rpx;
  font-size: 32rpx;
  color: #333333;
  background: transparent;
  border: none;
  padding-right: 30rpx;
}

.form-input::placeholder {
  color: #999999;
}

/* 性别选择 */
.gender-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 30rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.gender-group {
  display: flex;
  gap: 30rpx;
}

.gender-item {
  flex: 1;
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.gender-item.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.gender-item.active .gender-content {
  color: #ffffff;
}

.gender-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  color: #666666;
  transition: color 0.3s ease;
}

.gender-icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.gender-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 隐藏原生radio */
.gender-item radio {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 100rpx;
  background: #cccccc;
  color: #999999;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 25rpx;
  border: none;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.register-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
}

.register-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.4);
}

.btn-text {
  margin-right: 15rpx;
}

.btn-icon {
  font-size: 32rpx;
  animation: sparkle 2s ease-in-out infinite;
}

@keyframes sparkle {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.2) rotate(180deg); }
}

/* 底部区域 */
.footer-section {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 40rpx 60rpx 60rpx;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}
